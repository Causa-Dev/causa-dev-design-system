{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "extraFileExtensions": [".json"]
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["error", 2]
    },
    "ignorePatterns": ["webpack.config.js", "index.html"],
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
